<div>
  <form action="/celebrities/create" method="POST">
    <label>
      <h1>Name</h1>
      <input type="text" name="name" placeholder="celebrity name" />
    </label>
    <label>
      <h1>Occupation</h1>
      <input type="text" name="occupation" placeholder="occupation" />
    </label>
    <label>
      <h1>Catch Phrase</h1>
      <input type="text" name="catchPhrase" placeholder="catch phrase" />
    </label>
    <button type="submit">Submit</button>
  </form>
  {{#if errorMessage}}
    <p>There was a problem: {{errorMessage}}</p>
  {{/if}}
  <a href="/">Home</a>
</div>