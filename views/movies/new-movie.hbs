<h2>New Movie</h2>

<div class="container-new-movie">
  <form action="/movies/create" method="POST">
    <div>
      <label>
        <h1>Title</h1>
        <input type="text" name="title" placeholder="movie name" />
      </label>
    </div>
    <div>
      <label>
        <h1>Genre</h1>
        <input type="text" name="genre" placeholder="genre" />
      </label>
    </div>
    <div>
      <label>
        <h1>Plot</h1>
        <input type="text" name="plot" placeholder="plot" />
      </label>
    </div>
    <div>
      <label>
        <h1>Cast</h1>
        <select name="cast" class="cast" multiple>
          {{#each celebrities}}
          <option value={{_id}}>{{name}}</option>
          {{/each}}
        </select>
      </label>
    </div>
    <button type="submit">Submit</button>
  </form>
  {{#if errorMessage}}
  <p>There was a problem: {{errorMessage}}</p>
  {{/if}}
  <div>
    <a href="/">Home</a>
  </div>
</div>